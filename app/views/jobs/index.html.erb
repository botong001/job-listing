<div class="col-md-12">
  <div class="job">
    <%= link_to("Add a job", new_job_path, class: "btn btn-primary pull-right") %>
  </div>
  <table border="5" class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
      <tr>
      <td><%= link_to(job.title, job_path(job)) %></td>

      </tr>
      <tr>
      <td>
        <%= link_to("Edit", edit_admin_job_path(job), class: "btn btn-sm btn-primary")%>
        <%= link_to("Delete", admin_job_path(job), class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?" } )%>
      </td>
    </tr>
      <% end %>
    </tbody>
    </table>
  </div>
